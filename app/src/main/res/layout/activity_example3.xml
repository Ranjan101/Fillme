<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.patryk1007.example.Example2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.patryk1007.example.Example2Activity">

        <com.patryk1007.fillme.FillMe
            android:id="@+id/fill_me_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:fmAlphaLevel="125"
            app:fmConvexFigure="false"
            app:fmFillByTouch="vertical"
            app:fmFillColour="@android:color/holo_red_light"
            app:fmFillHorizontalPercent="1"
            app:fmFillVerticalPercent="0.95"
            app:fmImage="@drawable/heart" />

        <com.patryk1007.fillme.FillMe
            android:id="@+id/fill_me_view2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            app:fmConvexFigure="true"
            app:fmFillByTouch="vertical"
            app:fmFillColour="#72A9DD"
            app:fmFillHorizontalPercent="1"
            app:fmFillVerticalPercent="0.75"
            app:fmImage="@drawable/drop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <com.patryk1007.fillme.FillMe
            android:id="@+id/fill_me_view3"
            android:layout_width="235dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            app:fmConvexFigure="true"
            app:fmFillByTouch="horizontal"
            app:fmFillColour="#00ff00"
            app:fmFillHorizontalPercent="0.75"
            app:fmImage="@drawable/charge_battery" />

    </LinearLayout>

</FrameLayout>
